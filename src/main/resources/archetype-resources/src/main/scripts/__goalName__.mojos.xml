#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<pluginMetadata>
	<mojos>
		<mojo>
			<goal>${goalName}</goal>
			<call>${goalName}</call>
			<description>${pluginDescription}</description>
			<parameters>
				<parameter>
					<name>${parameterName}</name>
					<property>${parameterName}</property>
					<required>false</required>
					<expression>${symbol_dollar}{${parameterName}}</expression>
					<type>${symbol_dollar}{${parameterType}}</type>
					<defaultValue>${parameterDefaultValue}</defaultValue>
					<description>${parameterDescription}</description>
				</parameter>
			</parameters>
		</mojo>
	</mojos>
</pluginMetadata>
